<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.qiheng.hibernate.Student" table="student1">
		
		<composite-id class="com.qiheng.hibernate.StudentPrimaryKey" name="primaryKey">
			<key-property name="name" column="name" type="string"></key-property>
			<key-property name="number" column="number" type="integer"></key-property>
		</composite-id>
		<property name="age" column="age" type="integer"></property>
		<property name="timestamp" column="timestamp" type="timestamp"></property>
	</class>

</hibernate-mapping>